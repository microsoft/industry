                          "type": "Microsoft.EventHub/namespaces/authorizationrules",
                          "apiVersion": "2022-10-01-preview",
                          "name": "[concat(parameters('eventHubNamespaceName'), '/RootManageSharedAccessKey')]",
                          "location": "westeurope",
                          "dependsOn": [
