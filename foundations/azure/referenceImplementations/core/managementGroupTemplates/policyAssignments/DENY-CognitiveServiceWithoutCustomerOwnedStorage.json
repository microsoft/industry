{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "enforcementMode": {
            "type": "string",
            "allowedValues": [
                "Default",
                "DoNotEnforce"
            ],
            "defaultValue": "Default"
        }
    },
    "variables": {
        "policyDefinitions": {
            "denyCognitiveServiceCustomerOwnedStoragePolicy": "/providers/Microsoft.Authorization/policyDefinitions/46aa9b05-0e60-4eae-a88b-1e9d374fa515"
        },
        "policyAssignmentNames": {
            "denyCognitiveServiceCustomerOwnedStoragePolicy": "Deny-CognitiveService-woCustomerOwnedStorage",
            "description": "Assigning a customer owned storage to your Cognitive Service account helps ensure data is stored securely.",
            "displayName": "Cognitive Services accounts should use a customer owned storage"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-09-01",
            "name": "[variables('policyAssignmentNames').denyCognitiveServiceCustomerOwnedStoragePolicy]",
            "properties": {
                "description": "[variables('policyAssignmentNames').description]",
                "displayName": "[variables('policyAssignmentNames').displayName]",
                "policyDefinitionId": "[variables('policyDefinitions').denyCognitiveServiceCustomerOwnedStoragePolicy]",
                "enforcementMode": "[parameters('enforcementMode')]",
                "parameters": {
                    "effect": {
                        "value": "Deny"
                    }
                }
            }
        }
    ],
    "outputs": {}
}