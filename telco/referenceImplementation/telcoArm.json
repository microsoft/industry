    "variables": {
        "mgmtGroups": {
            "telco": "[concat(parameters('enterpriseScaleCompanyPrefix'), '-', 'telco-specialized')]"
        },
        "scopes": {
            "intermediate": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('enterpriseScaleCompanyPrefix'))]",
            "telco": "[tenantResourceId('Microsoft.Management/managementGroups', concat(parameters('enterpriseScaleCompanyPrefix'), '-', 'telco-specialized'))]"
        },
        "deploymentUris": {
            "eslzArm": "https://raw.githubusercontent.com/Azure/Enterprise-Scale/main/eslzArm/eslzArm.json",
            "telcoMgmtGroup": "[uri(deployment().properties.templateLink.uri, 'industrySpecific/managementGroupTemplates/mgmtGroupStructure/telcoMgmtGroup.json')]",
            "telcoPolicyDefinitions": "[uri(deployment().properties.templateLink.uri, 'industrySpecific/managementGroupTemplates/policyDefinitions/telcoPolicies.json')]",
            "erHaPolicyAssignment": "[uri(deployment().properties.templateLink.uri, 'industrySpecific/managementGroupTemplates/policyAssignments/DENY-non-ha-expressRoutes-policyAssignment.json')]",
            "pipHaPolicyAssignment": "[uri(deployment().properties.templateLink.uri, 'industrySpecific/managementGroupTemplates/policyAssignments/DENY-non-ha-publicIps-policyAssignment.json')]",
            "subscriptionPlacement": "[uri(deployment().properties.templateLink.uri, 'industrySpecific/managementGroupTemplates/subscriptionOrganization/subscriptionOrganization.json')]"
        },
        "deploymentNames": {
            "azureCore": "[take(concat('AzForTelco-', deployment().location, '-', deployment().name), 64)]",
            "telcoIndustry": "[take(concat('TelcoIndustry-', deployment().location, '-', deployment().name), 64)]",
            "telcoPolicyDefinitons": "[take(concat('TelcoPolicy', deployment().location, '-', deployment().name), 64)]",
            "erHaPolicyAssignment": "[take(concat('DenyNonHaEr', deployment().location, '-', deployment().name), 64)]",
            "pipHaPolicyAssignment": "[take(concat('DenyNonHaPip', deployment().location, '-', deployment().name), 64)]",
            "telcoLzSubs": "[take(concat('AzForTelco-TelcoLzs', deployment().location, '-', deployment().name), 60)]"                      
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[variables('deploymentNames').azureCore]",
            "location": "[deployment().location]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
